{
  "name": "wiki-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "apidoc": "node_modules/.bin/apidoc -i src -o public",
    "build": "tsc",
    "debug": "node --inspect=5858 -r ts-node/register src/app.ts",
    "start": "node dist/app.js",
    "serve": "nodemon",
    "typeorm:cli": "ts-node node_modules/typeorm/cli -f src/ormconfig.ts"
  },
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "express": "^4.18.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.1",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.9",
    "@types/node": "^12.7.2",
    "apidoc": "^0.17.7",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run debug",
    "ext": "ts"
  }
}
